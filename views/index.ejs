                            <input type='text' name='end-destination' value="" id='end-destination'
                                class="form-control border-top-0">
                        </div>


                    </div>


                    <div class="row mb-3">

                        <div class="col-md form-group">
                            <label for="time" class="form-label">Time and date</label>
                            <input type='text' name='end-destination' value="" id='end-destination'
                                class="form-control border-top-0">
                        </div>
                        <div class="col-md form-group">
                            <label for="cartype" class="form-label">Car Type</label>
                            <input type='text' name='cartype' value="" id='cartype'
                                class="form-control border-top-0">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


