<div id="carouselExampleSlidesOnly" class="carousel slide " data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="bg" src="/images/limo1.jpg" class="d-block w-100 h-100" alt="...">
        </div>
        <div class="carousel-item">
            <img class='bg' src="/images/limo2.jpg" class="d-block w-100 h-100" alt="...">
        </div>
        <div class="carousel-item">
            <img class='bg' src="/images/limo3.jpg" class="d-block w-100 h-100" alt="...">
        </div>
    </div>

    
</div>

<div>
    <h1 class="heading">Welcome To Limousine Tours</h1>
</div>



<div>
    <button class="btn btn-warning services">Our Main Services</button>
</div>


<div class="card details mb-3" style="max-width:800px;">
    <div class="row g-0">
        <div class="col-md">
            <img src="/images/limo12.jpg" style="max-width:400px;" alt="...">
        </div>
        <div class="col-md">
            <div class="card-body">

                <form>
                    <div class="row mb-3">
                        <div class="col-md">
                            <label for="yourname" class="form-label">your Name</label>
                            <input type='text' name='fullname' value="" id='fullname'
                                class="form-control border-top-0 ">
                        </div>

                        <div class="col-md">
                            <label for="phone" class="form-label">Phone</label>
                            <input type='number' name='phone' value="{{phone}}" id='phone'
                                class="form-control border-top-0">
                        </div>

                    </div>

                    <div class="row mb-3">

                        <div class="col-md form-group">
                            <label for="start-destination" class="form-label">Start Destination</label>
                            <input type='text' name='start-destination' value=""
                                id='start-destination' class="form-control border-top-0">
                        </div>


                        <div class=" col-md form-group">
                            <label for="end-destination" class="form-label">End Destination</label>
                            <input type='text' name='end-destination' value="" id='end-destination'
                                class="form-control border-top-0">
                        </div>


                    </div>


                    <div class="row mb-3">

                        <div class="col-md form-group">
                            <label for="time" class="form-label">Time and date</label>
                            <input type='text' name='end-destination' value="" id='end-destination'
                                class="form-control border-top-0">
                        </div>
                        <div class="col-md form-group">
                            <label for="cartype" class="form-label">Car Type</label>
                            <input type='text' name='cartype' value="" id='cartype'
                                class="form-control border-top-0">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
